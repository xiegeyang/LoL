<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/champiomIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/champiomIcon"
        android:layout_toEndOf="@+id/champiomIcon"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:id="@+id/normal_layout">

        <TextView
            android:id="@+id/textView_isWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp" />
        <TextView
            android:id="@+id/textView_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/normal_layout"
        android:layout_toEndOf="@+id/normal_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView_date"
            />
    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp">

        <TableRow>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item0"
                android:src="@drawable/item_empty"
                android:layout_marginLeft="2dp"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item1"
                android:src="@drawable/item_empty"
                android:layout_marginLeft="2dp"
                ></ImageView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item2"
                android:src="@drawable/item_empty"
                android:layout_marginLeft="2dp"
                ></ImageView>

        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item3"
                android:layout_marginTop="2dp"
                android:src="@drawable/item_empty"
                android:layout_marginLeft="2dp"
                ></ImageView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item4"
                android:src="@drawable/item_empty"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                ></ImageView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView_item5"
                android:src="@drawable/item_empty"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                ></ImageView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView_item6"
                android:src="@drawable/item_empty"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="2dp"
                ></ImageView>
        </TableRow>


    </TableLayout>


</RelativeLayout>